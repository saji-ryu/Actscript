{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["esnext", "dom"],
    "module": "commonjs",
    "strict": true,
    "target": "esnext",
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/@types/*"]
    },
    "allowJs": true,
    "typeRoots": ["node_modules/@types/*"],
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
